---
import NormalText from "./NormalText.astro";
export interface Props {
  name: string;
  position: string;
  date: string;
  url: string;
  description: string;
  technologies: string[];
  current: boolean;
}

const { name, position, url, date, description, technologies, current } =
  Astro.props;
---

<div class="self-baseline h-4 flex">
  <span class="relative flex h-4 w-4">
    {
      current ? (
        <>
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-sky-400 opacity-75" />
          <span class="relative inline-flex rounded-full h-4 w-4 bg-sky-500" />
        </>
      ) : (
        <span class="relative inline-flex rounded-full h-4 w-4 bg-zinc-400" />
      )
    }
  </span>
  <div class="text-zinc-400 text-xs grid-cols-1 self-baseline ps-4">
    <p>{date}</p>
  </div>
</div>

<div
  class="relative inline-block hover:bg-zinc-600 hover:rounded-md p-6 hover:bg-opacity-20 hover:shadow-lg transition-all w-"
>
  <a href={url} target="”_blank”">
    <h3 class="tracking-wide uppercase text-sky-300">{name}</h3>
    <h4 class="text-slate-400 text-sm">{position}</h4>

    <div class="py-4"><NormalText text={description} /></div>

    <div class="py-6 grid grid-cols-5 gap-x-2 gap-y-4">
      {
        technologies.map((technology) => (
          <div class="bg-sky-500 bg-opacity-20 rounded-3xl text-zinc-400 flex justify-center w-20 text-xs h-7 items-center ">
            <NormalText text={technology} />
          </div>
        ))
      }
    </div>
  </a>
</div>
