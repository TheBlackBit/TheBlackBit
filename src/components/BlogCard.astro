---
import ButtonRedirect from "./ButtonRedirect.astro";
export interface Props {
  title: string;
  description: string;
  url: string;
  image: string;
}

const { title, description, url, image } = Astro.props;
const imageUlr = "url(".concat(image).concat(")");
---

<div
  class="rounded-md grid grid-rows-2 bg-cover bg-card relative shadow-lg h-96"
  :class="bg-card"
>
  <div class="z-20 flex items-end justify-center">
    <ButtonRedirect title="Read" url={url} />
  </div>

  <div class="self-end z-10 p-4">
    <h4 class="text-white text-l font-extrabold">{title}</h4>
    <p class="pt-2 text-xs text-neutral-400">
      {description}
    </p>
  </div>

  <div
    class="absolute w-full h-full bg-gradient-to-t from-zinc-950 to-60% rounded-md"
  >
  </div>
</div>

<style define:vars={{ imageUlr }}>
  .bg-card {
    background-image: var(--imageUlr);
  }
</style>
