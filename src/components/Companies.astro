---
import experienceData from "../data/experience.json";
import Company from "./Company.astro";
interface Company {
  id: number;
  name: string;
  date: string;
  url: string;
  platform: string[];
  position: string;
  description: string;
  technologies: string[];
  current: boolean;
}
const data: Company[] = experienceData.map((company, index) => ({
  ...company,
  id: index,
}));
---

{
  data.map((company) => (
    <Company
      name={company.name}
      position={company.position}
      url={company.url}
      date={company.date}
      platform={company.platform}
      description={company.description}
      technologies={company.technologies}
      current={company.current}
    />
  ))
}
