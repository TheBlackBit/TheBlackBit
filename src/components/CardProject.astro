<!-- Overview -->
<p class="text-neutral-400 text-sm pt-3">
  {description}
</p>

<div class="flex flex-col">
  <div class="py-6 grid grid-cols-6 gap-x-2 gap-y-2">
    {
      technologies.map((technology) => (
        <div class="bg-sky-500 bg-opacity-20 rounded-3xl text-zinc-400 flex justify-center w-16 text-[9px] h-5 items-center">
          <p>{technology}</p>
        </div>
      ))
