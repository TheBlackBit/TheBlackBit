---
export interface Props {
  name: string;
  stars: string;
  reviews: string;
  downloads: string;
  playstore: string;
  appstore: string;
  github: string;
  description: string;
  technologies: string[];
  imageUrl: string;
}

const {
  name,
  stars,
  reviews,
  downloads,
  playstore,
  appstore,
  github,
  description,
  technologies,
  imageUrl,
} = Astro.props;
---

<h2 class="text-white text font-bold tracking-wide">{name}</h2>

<!-- Reviews -->

{
  (
    <div class="flex auto-cols-auto items-center text-xs pt-2">
      {stars !== null && (
        <div class="grid grid-rows-2 pr-4">
          <div class="flex justify-center items-center">
            <p class="flex justify-center pr-1 text-neutral-300">{stars}</p>
            <img src="/star.svg" width="14" height="14" />
          </div>
          {reviews !== null && <p class="text-slate-400">{reviews}</p>}
        </div>
      )}

      {stars !== null && downloads !== null && (
        <div class="w-px h-6 bg-zinc-400" />
      )}

      {downloads !== null && (
        <div class="grid grid-rows-2 pl-4">
          <p class="flex justify-center text-neutral-300">{downloads}</p>
          <p class="text-slate-400">Downloads</p>
        </div>
      )}
    </div>
  )
}

<!-- Buttons ref -->
<div class="flex gap-3 py-3">
